{
  "manifest_version": 3,
  "name": "CodeSure â€“ CPT Code Validator",
  "version": "0.2.2",
  "description": "Validate mock 5-digit codes, compare payer rules, suggest codes with AI, summarize policies, and build PA notes using Chrome's built-in AI APIs.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab", 
    "scripting", 
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/suggest-worker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}